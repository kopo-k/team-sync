{
  "name": "team-sync",
  "displayName": "TeamSync",
  "description": "チーム開発のリアルタイム共有ツール",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "team-sync.login",
        "title": "TeamSync: ログイン"
      },
      {
        "command": "team-sync.logout",
        "title": "TeamSync: ログアウト",
        "icon": "$(log-out)"
      },
      {
        "command": "team-sync.createTeam",
        "title": "TeamSync: チームを作成"
      },
      {
        "command": "team-sync.joinTeam",
        "title": "TeamSync: チームに参加"
      },
      {
        "command": "team-sync.setStatus",
        "title": "TeamSync: ステータスを設定",
        "icon": "$(edit)"
      },
      {
        "command": "team-sync.leaveTeam",
        "title": "TeamSync: チームを退出",
        "icon": "$(log-out)"
      },
      {
        "command": "team-sync.copyInviteCode",
        "title": "TeamSync: 招待コードをコピー"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "teamSync",
          "title": "TeamSync",
          "icon": "$(organization)"
        }
      ]
    },
    "views": {
      "teamSync": [
        {
          "id": "teamSyncSidebar",
          "name": "メンバー"
        },
        {
          "id": "teamSyncInvite",
          "name": "チーム招待",
          "when": "teamSync.hasTeam"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "teamSyncSidebar",
        "contents": "TeamSync を始めましょう。\n[ログイン](command:team-sync.login)",
        "when": "!teamSync.loggedIn"
      },
      {
        "view": "teamSyncSidebar",
        "contents": "チームに参加して始めましょう。\n[チームを作成](command:team-sync.createTeam)\n[チームに参加](command:team-sync.joinTeam)",
        "when": "teamSync.loggedIn && !teamSync.hasTeam"
      },
      {
        "view": "teamSyncInvite",
        "contents": "メンバーを招待するには\n招待コードを共有してください\n[招待コードをコピー](command:team-sync.copyInviteCode)",
        "when": "teamSync.hasTeam"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "team-sync.setStatus",
          "when": "view == teamSyncSidebar && teamSync.hasTeam",
          "group": "navigation"
        },
        {
          "command": "team-sync.leaveTeam",
          "when": "view == teamSyncSidebar && teamSync.hasTeam",
          "group": "navigation"
        },
        {
          "command": "team-sync.logout",
          "when": "view == teamSyncSidebar && teamSync.loggedIn"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
