{
  "name": "team-sync",
  "displayName": "TeamSync",
  "description": "チーム開発のリアルタイム共有ツール",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "team-sync.login",
        "title": "TeamSync: ログイン"
      },
      {
        "command": "team-sync.logout",
        "title": "TeamSync: ログアウト"
      },
      {
        "command": "team-sync.createTeam",
        "title": "TeamSync: チームを作成"
      },
      {
        "command": "team-sync.joinTeam",
        "title": "TeamSync: チームに参加"
      },
      {
        "command": "team-sync.setStatus",
        "title": "TeamSync: ステータスを設定"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "teamSync",
          "title": "TeamSync",
          "icon": "$(organization)"
        }
      ]
    },
    "views": {
      "teamSync": [
        {
          "id": "teamSyncSidebar",
          "name": "メンバー"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
